# Supabase Configuration
# Get these from https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=your-anon-key

# Database URL for Drizzle ORM
# Get this from Supabase: Project Settings > Database > Connection String (Direct connection)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# OnvoPayments Configuration
ONVO_PAYMENTS_API_KEY=your-onvo-api-key
ONVO_PAYMENTS_SECRET_KEY=your-onvo-secret-key
ONVO_PAYMENTS_WEBHOOK_SECRET=your-onvo-webhook-secret
NEXT_PUBLIC_ONVO_PAYMENTS_PUBLIC_KEY=your-onvo-public-key

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_META_PIXEL_ID=your-meta-pixel-id

# Environment
NODE_ENV=development
